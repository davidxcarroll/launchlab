extends _base.pug

block content

	div.hero-full.hero-home
		div.nav-home
			include _include-header.pug

	div.outer.primary-message
		div.inner
			h1.h1
				span.break The science of 
				span.break real estate sales

	div.outer.buckets-3-col.primary-message-buckets
		div.inner
			ul
				li
					div.svg.primary-message-svg
						include _svg-marketing_advertising.pug
					p.h7
						span.break Internet Marketing 
						span.break and Advertising
				li
					div.svg.primary-message-svg
						include _svg-accelerated_sales.pug
					p.h7
						span.break Accelerated Real 
						span.break Estate Sales
				li
					div.svg.primary-message-svg
						include _svg-secret_sauce.pug
					p.h7
						span.break Unconventional 
						span.break Secret Sauce

	div.outer.project-featured
		.inner
			div.project-photo
				div.stats
					div.stat
						h2.h2 $100 M
						p.h7 Original Launch Sales
					div.stat
						h2.h2 $10 M
						p.h7 Donec Congue Lacinia
			div.project-info
				div.project-info-title
					h1.h1 Sales Success in Two Eras
					h5.h5 The Canyons&reg; Ski Resort, Park City, Utah
				div.project-info-cta.cta-square
					a(href="projects.html")
						h5.h5 View case study
						span.cta-arrow

	div.outer.project-list-map
		div.inner
			h1.h1 We've been everywhere, man
		div.map
			div.svg
				include _svg-map.pug
		div.project-list

			mixin project(resort, location)
				li
					h6.h6= resort
					p.h8.black-trans= location

			div.project-list-region
				p.h7.black-trans United States of America
				ul
					+project('Cordillera', 'Vail Valley, Colorado')
					+project('Grizzly Ranch', 'Lake Tahoe, California')
					+project('Juniper Springs Lodge', 'Mammoth, California')
					+project('Hyatt Escala Lodge', 'Park City, Utah')
					+project('Promonotory', 'Park City, Utah')
					+project('Westgate Park City Resort', 'Park City, Utah')
					+project('Reunion Resort and Club', 'Orlando, Florida')
					+project('Hammock Beach', 'Palm Coast, Florida')
					+project('Spruce Peak', 'Stowe Mt. Resort, Vermont')

			div.project-list-region
				p.h7.black-trans Latin America &amp; The Caribbean
				ul
					+project('Four Seasons Villas', 'Punta Mita, Mexico')
					+project('Grand Residences', 'Riviera Maya, Mexico')
					+project('Monte del Barco', 'Guanacaste, Costa Rica')
					+project('Roko Ki', 'Dominican Republic')
					+project('Royal Resorts', 'Cancun, Mexico')
					+project('Royal Haciendas', 'Playa del Carmen, Mexico')

		div.clearfix

	div.outer.testimonial
		div.inner
			div.quote.svg
				include _svg-quote.pug
			div.content
				h1.h3 Launch Lab executed a sales and marketing process for us that exceeded our expectations, generating $100M for us in one year. Just as important, they are true professionals that conduct their business with the utmost level of effort and integrity.
				div.source
					h5.h5 Mark Waltrip, COO Westgate Resorts
					h5.h5 (407) 351-3350 x101
		div.clearfix

	div.outer.contact
		div.inner
			div.content
				h1.h1 Let's get to work
				div.contact-fields
					label.h5 Name
					input(type="text" placeholder="First Last")
					label.h5 Email
					input(type="text" placeholder="you@email.com")
					label.h5 Phone
					input(type="text" placeholder="123-456-7890")
					label.h5 Message
					textarea(placeholder="How can we help?")
				div.contact-submit
					input(type="submit" value="Send")
		div.clearfix

	div.outer.featured-article
		div.inner
			div.content
				div.article-photo
				div.article-summary
					h5.h5 Further reading
					h1.h1 Our 10-point process for digital marketing
					p Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nullam in dui mauris. Vivamus hendrerit arcu sed erat molestie vehicula. Sed auctor neque eu tellus rhoncus ut eleifend nibh porttitor. Ut in nulla enim. Phasellus molestie magna non est bibendum.
					a(href="whitepapers.html")
						p.button Continue reading
		div.clearfix





